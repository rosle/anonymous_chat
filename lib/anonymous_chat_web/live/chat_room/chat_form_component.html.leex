<%= f = form_for @changeset, "#",
      phx_target: @myself,
      phx_change: "validate",
      phx_submit: "save"
%>
  <%= hidden_input f, :username, value: "test_user" %>

  <div class="input-group">
    <%= textarea f, :content, rows: 5 %>
  </div>

  <div class="form__action">
    <%= submit "Send", class: "btn", phx_disable_with: "Sending...", disabled: !@changeset.valid? %>
  <div>
</form>
